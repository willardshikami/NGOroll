<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.willardpc.ngoroll.splashActivity">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:weightSum="1">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/splashImage"
            android:src="@drawable/ngoroll"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GIVING BACK"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="25sp"
            android:id="@+id/splashHeader"
            android:layout_below="@+id/splashImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:textIsSelectable="false"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Look for NGOs you want to donate to and give back to the community fo a better cause"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:textSize="18sp"
            android:id="@+id/splashParagraph"
            android:layout_below="@+id/splashHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:typeface="sans" />

    </RelativeLayout>
</LinearLayout>
