<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.willardpc.ngoroll.splashActivity">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/npbg"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/top">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/splashImage"
                android:src="@drawable/ngoroll"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_header"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="25sp"
                android:id="@+id/splashHeader"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:textIsSelectable="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_paragraph"
                android:textColor="#FFF"
                android:textAlignment="center"
                android:textSize="16sp"
                android:id="@+id/splashParagraph"
                android:layout_below="@+id/splashHeader"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/middle">

            <Button
                android:layout_margin="60dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="GET STARTED"
                android:id="@+id/buttonStart"
                android:background="@drawable/button_selector"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
